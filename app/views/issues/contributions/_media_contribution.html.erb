<a name="contribution<%= contribution.id %>"></a>
<div id="contribution-<%= contribution.id %>" class="dnld <%= media_style(contribution) %>">
  <p><strong><%= media_link_info(contribution) %></strong></p>
  <p><em><%= contribution.person.name %></em>
    <% if contribution.content %>
    &ndash; <%= contribution.content %>
    <% end %>
  </p>
  <p>
    <%= link_to 'Delete', conversation_contribution_path(contribution.conversation, contribution), :class => 'delete', :remote => true, :method => :delete, :confirm => "Are you sure you want to delete this?" if contribution.editable_by?(current_person) %>
  </p>
</div>
